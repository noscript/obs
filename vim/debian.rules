#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure -- \
		--with-features=huge \
		--enable-multibyte \
		--disable-pythoninterp \
		--enable-python3interp \
		--with-python3-config-dir=$(shell python3-config --configdir) \
		--enable-rubyinterp \
		--enable-perlinterp=yes \
		--enable-luainterp=yes \
		--enable-gui=gtk2 \
		--enable-cscope \
		--enable-fail-if-missing \
		--prefix=/usr

