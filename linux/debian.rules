#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_configure:
	tar xaf $(shell find /usr/src/ -type f -name 'linux-source-*.tar.xz')

override_dh_auto_build:
	cp -r $(shell find . -maxdepth 1 -type d -name 'linux-source-*')/* .
	cp /usr/src/linux-config-4.9/config.amd64_none_amd64.xz .
	unxz -d config.amd64_none_amd64.xz
	mv config.amd64_none_amd64 .config
	ls -a
	make bindeb-pkg LOCALVERSION=-obs
